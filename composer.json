{
    "name": "asinius/document",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "ext-dom": "*",
        "ext-libxml": "*",
        "asinius/asinius": "^0.2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10"
    },
    "suggest": {
        "ext-tidy": "Tidy is suggested if you want cleaner html output: https://www.php.net/manual/en/book.tidy.php"
    },
    "autoload": {
        "psr-4": {
            "Asinius\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/robsheldon/asinius-core"
        }
    ]
}
